@using NewFlucompMVC.Models
@{
    ViewBag.Title = "Team Members";
    Layout = ViewBag.GetLayout();
    ViewBag.ShowSidebar = false;
}
@{
    Html.RenderPartial("PageTitle");
}
<div id="about" class="contentInner page">
    @{
        foreach (var person in Data.Content.Pages["Staff"].Person)
        {
        <div class="aboutPerson well">
            <table class="personTable">
                <tbody>
                    <tr>
                        <td rowspan="3">
                            <div class="profilepicWrap">
                                <img src="@Url.Content(person.Picture)" alt="@person.Name's Picture" class="profile"/>
                            </div>
                        </td>
                        <td>
                            <span class="identity">@person.Name</span><br />
                            <span class="title">@person.Title</span><br />
                            <span class="position">@person.Position</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="staff_email">
                            <a href="mailto:@person.Email">@person.Email</a> 
                            <br/>
                            <div class="socialSpan">
                                <a href="@person.FullBioLink">
                                    <img src="http://www.linkedin.com/img/webpromo/btn_liprofile_blue_80x15.png" width="80" height="15" border="0" alt="View their profile on LinkedIn">
                                </a>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="bio">
                            @Html.Raw(person.Biography)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        }
    }
</div>
