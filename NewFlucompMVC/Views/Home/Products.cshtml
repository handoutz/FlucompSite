@model NewFlucompMVC.Models.ProductModel
@{
    ViewBag.Title = "Products";
    Layout = ViewBag.GetLayout();
    ViewBag.ShowSidebar = true;
}
@{
    Html.RenderPartial("PageTitle");
}
@{
    foreach (var product in Model.Products)
    { 
    <div class="product well">
        <a href="@product.Url">
            <span class="title">@product.Name</span><br />
            <img src="@Url.Content(product.ImageSrc)" /><br />
        </a>
        <span class="desc">@Html.Raw(product.Description)</span>
    </div>
    }
}